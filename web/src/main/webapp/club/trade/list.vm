<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
		<div class="center sliding">订单</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="trade.list" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content pull-to-refresh-content infinite-scroll">
			<div class="pull-to-refresh-layer">
				<div class="preloader"></div>
				<div class="pull-to-refresh-arrow"></div>
			</div>
			#foreach($trade in $!{tradeList})
			<div class="list-block" style="font-size: 13px;">
				<ul>
					<li>
						<div class="item-content">
							<div class="item-inner">
								<div class="item-title">订单号：$!{trade.tradeNo}</div>
								<div class="item-after">
									#if($!{trade.type} == 'check' || $!{trade.type} == 'topay')
									<a href="javascript:trade_list_cancel('$!{trade.tradeNo}');">取消</a>
									#end
								</div>
							</div>
						</div>
					</li>
					<li>
						<a href="$!{env.appUrl}/trade/detail.htm?tradeNo=$!{trade.tradeNo}" class="item-link item-content" data-ignore-cache="true">
							<div class="item-media"><img src="$!{env.imgUrl}/image/item/detail-3.jpg" style="width: 60px;"></img></div>
							<div class="item-inner">
								<div class="item-title">特仑苏纯牛奶利乐苗条装<br/>250ml×8盒×3提 共24盒</div>
								<div class="item-after">￥79.9</div>
							</div>
                        </a>
					</li>
					<li>
						<div class="item-content">
							<div class="item-inner">
                                <div class="item-title">总价：<span style="color: #ff5500;">￥89.90</span></div>
								<div class="item-after">
									#if($!{trade.type} == 'check' || $!{trade.type} == 'topay')
									<a href="$!{env.appUrl}/pay/index.htm?tradeNo=$!{trade.tradeNo}" class="button color-orange" data-ignore-cache="true">付款</a>
									#elseif($!{trade.type} == 'tosend')
									<a href="javascript:trade_list_refund('$!{trade.tradeNo}');" class="button color-red">申请退款</a>
									#elseif($!{trade.type} == 'send' || $!{trade.type} == 'sign')
									<a href="#" class="button color-gray">物流</a>
    									#if($!{trade.type} == 'sign')
    									<a href="#" class="button color-gray" style="margin-left: 5px;">评价</a>
    									#end
									#end
								</div>
							</div>
						</div>
					</li>
				</ul>
			</div>
			#end
			<!-- Preloader -->
			<div class="infinite-scroll-preloader">
				<div class="preloader"></div>
			</div>
		</div>
		<form id="trade/list/cancel" action="$!{env.appUrl}/trade/cancel.htm" method="POST" class="ajax-submit">
        	<input type="hidden" name="tradeNo" id="trade_list_cancel_tradeNo"/>
        </form>
		<form id="trade/list/refund" action="$!{env.appUrl}/wxpay/refund.htm" method="POST" class="ajax-submit">
        	<input type="hidden" name="tradeNo" id="trade_list_refund_tradeNo"/>
        </form>
    </div>
</div>